<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 全屏 -->
    <style name="FullScreenStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <!-- Setting -->
    <style name="setting_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:textColor">@color/default_tv_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
    </style>

    <style name="setting_item_container_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="setting_item_label_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="setting_item_et_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:theme">@style/MyEditText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
<!--        <item name="colorControlNormal">@color/indigo</item>-->
        <item name="colorControlActivated">@color/default_theme_color</item>
    </style>


</resources>
